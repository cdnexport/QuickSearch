{
    "name": "QuickSearch",
    "version": "0.2",
    "description": "Quickly open a search tab for any website.",
    "manifest_version": 2,

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": ["<all_urls>", "contextMenus", "activeTab", "storage"],
    "options_ui": {
        "page": "./options/options.html",
        "open_in_tab": false
    }
}
