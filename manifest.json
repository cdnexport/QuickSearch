{
    "name": "QuickTube",
    "version": "0.1",
    "description": "Search YouTube with one click.",
    "manifest_version": 2,

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "permissions": ["<all_urls>", "contextMenus", "activeTab", "storage"],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["injectable.js"]
    }],

    "options_ui": {
        "page": "./options/options.html",
        "open_in_tab": false
    }
}
